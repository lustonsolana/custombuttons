{
  "manifest_version": 3,
  "name": "Axiom Button Customizer",
  "version": "1.5.1",
  "description": "Customize Buy Buttons on Axiom.trade.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.axiom.trade/*"],
      "js": ["content.js"]
    }
  ]
}
