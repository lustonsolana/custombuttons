{
  "manifest_version": 3,
  "name": "CustomButtons",
  "version": "1.6.0",
  "description": "Customize buttons on nova & axiom.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.axiom.trade/*", "https://*.nova.trade/*"],
      "js": ["content.js"]
    }
  ]
}
